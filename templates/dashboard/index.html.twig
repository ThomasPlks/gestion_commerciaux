{% extends 'base.html.twig' %}

{% block title %}Evenement index{% endblock %}

{% block body %}
    <h1>Evenement index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Description</th>
                <th>Evenement</th>
                <th>Conclusion</th>
                <th>KmParcourus</th>
                <th>DateArrivee</th>
                <th>DateDepart</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for evenement in evenements %}
            <tr>
                <td>{{ evenement.id }}</td>
                <td>{{ evenement.Titre }}</td>
                <td>{{ evenement.Description }}</td>
                <td>{{ evenement.evenement }}</td>
                <td>{{ evenement.Conclusion }}</td>
                <td>{{ evenement.KmParcourus }}</td>
                <td>{{ evenement.DateArrivee ? evenement.DateArrivee|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ evenement.DateDepart ? evenement.DateDepart|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_dashboard_show', {'id': evenement.id}) }}">show</a>
                    <a href="{{ path('app_dashboard_edit', {'id': evenement.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_dashboard_new') }}">Create new</a>
{% endblock %}
